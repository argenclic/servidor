   <document>
    <style name="default" bold="false" background="0xFFFF80" family="Arial" size="13" foreground="0x000000" italic="false" tabWidth="16" />
    <style name="target" base="default" target="true" background="0xC0C0C0" foreground="0x0000FF" />
