     <color background="0xFFFFFF" />
    </style>
    <shaper class="@Rectangular" cols="1" rows="3" />
    <cell id="0" image="siladip.gif">
     <media type="RUN_CLIC_PACKAGE" level="1" file="sildip.pac" params="sildip/sildip.jclic" />
    </cell>
    <cell id="1" image="toniato.gif">
     <media type="RUN_CLIC_PACKAGE" level="1" file="siltonat.pac" params="siltonat/siltonat.jclic" />
    </cell>
    <cell id="2" image="agulles.gif">
     <media type="RUN_CLIC_PACKAGE" level="1" file="agulles.pac" params="agulles/agulles.jclic" />
