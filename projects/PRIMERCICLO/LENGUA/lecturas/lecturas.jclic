       <answer>El Sol</answer>
       <optionList>
        <option>El Viento</option>
        <option>El Sol</option>
        <option>El Hombre </option>
       </optionList>
       <text>El Sol</text>
      </target>
      <text foreground="0x000000" italic="false" bold="false" size="15" background="0xFFFFFF" family="Arial">.</text>
     </p>
     <p foreground="0x000000" italic="false" bold="false" size="15" background="0xFFFFFF" family="Arial" />
     <p foreground="0x000000" italic="false" bold="false" size="15" background="0xFFFFFF" family="Arial">
